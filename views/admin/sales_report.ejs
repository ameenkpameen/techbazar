<%- include('../layout/admin/admin_nav.ejs') %>
<%- include('../layout/admin/admin_sidebar.ejs') %>

<main id="main" class="main">
 <section class="section">
    
      <div class="col-lg-12">

        <div class="card" style="background-color: rgb(255, 255, 255);">
          <div class="card-body p-5">
            <div class="text-center">
                <h1 class=" p-4 fw-bold" style="color: rgb(255, 0, 0);">Sales Report</h1>
            </div>
            <div class="text-center">
              
                <% if(typeof message !== 'undefined' ){ %>
                  <h5 style="color: rgb(255, 0, 0);">
                    <%= message %>
                  </h5>
                  <% } %>
            </div>

            <!-- General Form Elements -->
            <form action="" method="post" name="myform" id="myforms">
              
              
              <div class="row mb-3">
                <label for="inputText" class="col-sm-2 col-form-label">From Date</label>
                <div class="col-sm-10">
                  <input type="date" class="form-control" name="fromDate">
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputEmail" class="col-sm-2 col-form-label">To Date</label>
                <div class="col-sm-10">
                  <input type="date" class="form-control" name="toDate">
                </div>
              </div>
              
              

              <div class="row mb-3">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
              </div>

            </form><!-- End General Form Elements -->

          </div>
        </div>

      </div>
      
    
    </section>
</main>



