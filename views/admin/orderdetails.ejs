<%- include('../layout/admin/admin_header.ejs') %>
<%- include('../layout/admin/admin_nav.ejs') %>
<%- include('../layout/admin/admin_sidebar.ejs') %>




<main id="main" class="main">
    <section class="section">
  
      
  
      <section class="section dashboard">
        <div class="row">
          
  
              <!-- Recent Sales -->
              <div class="page-content">
            	<div class="dashboard">
	                <div class="container">
	                	<div class="row">
	                		
                            <aside class="col-lg-12">
	                		<div class="tab-pane fade show active" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">

                                <% if(orders == ''){ %>
                                <h4 class="text-danger">No order has been made yet.</h4>
                                <% }else{ %>
                                <h4 class="text-success">Your Order details are here...</h4>
                                <% }%>
                                <table class="table">
                                    <tbody>
                                    
                                       <tr>
                                           
                                          <td>
                                              <div class="row">
                                                <div class="col-lg-2">
                                                    <h6 class="text-danger text-center">Order Id</h6>
                                                </div>
                                                <div class="col-lg-10">
                                                    <h6><%= orders[0].orderId %></h6>
                                                </div>
                                              </div>
                                          </td>

                                          
                                       </tr>

                                       <tr>
                                         <td>
                                            <div class="row">
                                              <div class="col-lg-2">
                                                  <h6 class="text-danger text-center">Delivery Address</h6>
                                              </div>
                                              <div class="col-lg-10">
                                                  <h6><%= orders[0].deliveryAddress %></h6>
                                              </div>
                                            </div>
                                         </td>
                                       </tr>

                                       <tr>
                                        <td>
                                           <div class="row">
                                             <div class="col-lg-2">
                                                 <h6 class="text-danger text-center">Payment Method</h6>
                                             </div>
                                             <div class="col-lg-10">
                                                 <h6><%= orders[0].paymentmethod %></h6>
                                             </div>
                                           </div>
                                        </td>
                                      </tr>

                                      <tr>
                                        <td>
                                            <%orders[0].products.forEach((element=>{ %>
                                           <div class="row">
                                             <div class="col-lg-2">
                                                 <h6 class="text-danger text-center">Product</h6>
                                             </div>
                                             
                                                <div class="col-lg-4">
                                                
                                                  <h6><%= element.productId.productname %></h6>
                                                </div>

                                                <div class="col-lg-2">
                                                
                                                    <img src="/user_images/<%= element.productId.image[0] %>" alt="" style="width: 50px; height: 50px;">
                                                  </div>
                                                 
                                                  <div class="col-lg-2">
                                                
                                                    <h6><%= element.productId.price %><span>(price)</span></h6>
                                                    
                                                  </div>

                                                  <div class="col-lg-1">
                                                
                                                    <h6><%= element.quantity %></h6>
                                                  </div>

                                                  <div class="col-lg-1">
                                                
                                                    <h6><%= element.producttotal %></h6>
                                                  </div>

                                                  
                                             
                                           </div>
                                           <% })) %>
                                        </td>
                                      </tr>

                                      <tr>
                                        <td>
                                           <div class="row">
                                             <div class="col-lg-2">
                                                 <h6 class="text-danger text-center">Discount</h6>
                                             </div>
                                             <div class="col-lg-10">
                                                 <h6><%= orders[0].discount %></h6>
                                             </div>
                                           </div>
                                        </td>
                                      </tr>

                                      <tr>
                                        <td>
                                           <div class="row">
                                             <div class="col-lg-2">
                                                 <h6 class="text-danger text-center">Order Price</h6>
                                             </div>
                                             <div class="col-lg-10">
                                                 <h6><%= orders[0].totalprice %></h6>
                                             </div>
                                           </div>
                                        </td>
                                      </tr>

                                      <tr>
                                        <td>
                                           <div class="row">
                                             <div class="col-lg-2">
                                                 <h6 class="text-danger text-center">Order Status</h6>
                                             </div>
                                             <div class="col-lg-10">
                                                 <h6><%= orders[0].status %></h6>
                                             </div>
                                           </div>
                                        </td>
                                      </tr>

                                      <tr>
                                        <td>
                                           <div class="row">
                                             <div class="col-lg-2">
                                                 <h6 class="text-danger text-center">Ordered Date</h6>
                                             </div>
                                             <div class="col-lg-10">
                                                 <h6><%= orders[0].createdAt %></h6>
                                             </div>
                                           </div>
                                        </td>
                                      </tr>

                                        

                                     </tbody>


                                 </table>
                                <a href="/admin/orderlist" class="btn btn-outline-primary-2"><span>Back</span><i class="icon-long-arrow-left"></i></a>
                            </div><!-- .End .tab-pane -->
                        </aside>
                        
	                	</div><!-- End .row -->
	                </div><!-- End .container -->
                </div><!-- End .dashboard -->
            </div><!-- End .page-content -->
  
  
        </div>
      </section>
  
    </main>













<%- include('../layout/admin/admin_footer.ejs') %>