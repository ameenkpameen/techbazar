<script>
    function validate(orderId,value) {
        value = value
        orderId = orderId
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Cancel it!'
        }).then((result) => {
          if (result.isConfirmed) {
            $.ajax({
                url: '/changeorderstatus',
                data: {
                    orderId: orderId,
                    value: value
                },
                method: 'post',
                success: (response) => {
                      if(response.success){
                        Swal.fire({
                            title: 'Cancelled!',
                            text: 'Your Order has been Cancelled.',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        setTimeout(() => {
                            location.reload()
                        }, 1000);
                        document.getElementById(orderId).innerHTML = response.status
                      }else if(response.returned){
                        Swal.fire({
                            title: 'Returned!',
                            text: 'Your Order has been Returned.',
                            icon: 'success',
                            showConfirmButton: false
                        })
                        setTimeout(() => {
                            location.reload()
                        }, 1000);
                        document.getElementById(orderId).innerHTML = response.status

                      }
                        
                   
                }
            })
          }
        })
    }
    </script>

